@page
@model ListLife.Pages.CreateNewShoppingList
@{
}

<h2>Create New Shoppinglist</h2>

<form method="post">
    <div class="newList">
        <label for="ShoppingListName">Shopping List Name:</label>
        <input type="text" id="ShoppingListName" class="form-control" placeholder="Enter list name" />
    </div>

    <button type="submit" class="btnCreateList">Create Shopping List</button>
    <button type="button" class="btnCancel" onclick="window.location.href='/MyPage'">Cancel</button>
</form>

<style>
    .btnCreateList,
    .btnCancel {
        background-color: mediumpurple;
        border-radius: 8px;
        margin: 15px;
    }

</style>
